<% content_for :page_title, "Home page" %>

<section class="section">
    <div class="container">
        <% @posts.each do |post| %>
        <div class="card">
            <div class="card-content mgt-medium">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4"><%= link_to post.title, post %></p>
                    </div>
                </div>
                <div class="content">
                    <%= post.content %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</section>